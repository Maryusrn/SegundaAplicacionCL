<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <View
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/view1"
        />

    <View
        android:id="@+id/view2left"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toTopOf="@id/view1"
        app:layout_constraintEnd_toStartOf="@id/view1"
        />
    <View
        android:id="@+id/view2right"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@color/teal_200"
        app:layout_constraintBottom_toTopOf="@id/view1"
        app:layout_constraintStart_toEndOf="@id/view1"
        />
    <View
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@color/purple_500"
        app:layout_constraintBottom_toTopOf="@id/view2left"
        app:layout_constraintEnd_toStartOf="@id/view2right"
        />
    <View
        android:id="@+id/view3right"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintStart_toEndOf="@id/view1"
        />
    <View
        android:id="@+id/view3left"
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@color/teal_200"
        app:layout_constraintTop_toBottomOf="@id/view1"
        app:layout_constraintEnd_toStartOf="@id/view1"
        />
    <View
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/view3left"
        app:layout_constraintEnd_toStartOf="@id/view3left"
        />
    <View
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/view3left"
        app:layout_constraintStart_toEndOf="@id/view3left"
        />
    <View
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:background="@color/purple_500"
        app:layout_constraintTop_toBottomOf="@id/view3right"
        app:layout_constraintStart_toEndOf="@id/view3right"
        />


</androidx.constraintlayout.widget.ConstraintLayout>